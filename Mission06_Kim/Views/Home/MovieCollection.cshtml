@model Mission06_Kim.Models.MovieViewModel

@{
    ViewData["Title"] = "MovieCollection";
}

<h2 class="text-center mt-4">Add a New Movie</h2>

<form asp-action="AddMovie" method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" asp-for="Movie.Title" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Category</label>
        <input type="text" asp-for="Movie.Category" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Director</label>
        <input type="text" asp-for="Movie.Director" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Year</label>
        <input type="number" asp-for="Movie.Year" class="form-control" min="1888" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Rating</label>
        <select asp-for="Movie.Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Edited</label>
        <input type="checkbox" asp-for="Movie.Edited" />
    </div>
    <div class="mb-3">
        <label class="form-label">Copied to Plex</label>
        <input type="checkbox" asp-for="Movie.CopiedToPlex" />
    </div>
    <div class="mb-3">
        <label class="form-label">Notes (Max 25 characters)</label>
        <input type="text" asp-for="Movie.Notes" class="form-control" maxlength="25" />
    </div>
    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>

<h2 class="text-center mt-4">Movie Collection</h2>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Category</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Copied to Plex</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)  // Fix: Loop over Model.Movies //
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Category.CategoryName</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@(movie.Edited ? "Yes" : "No")</td>
                <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>



